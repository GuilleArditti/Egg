	Definir codigo, entrada Como Caracter
	definir contador Como Entero
	contador<-3
	codigo<-"Eureka"
	
	escribir "Ingrese la palabra magica"
	leer entrada
	
	Mientras entrada<>codigo y contador>0 Hacer
		contador= contador-1
		escribir "Error. intentos restantes: ", contador
		
		escribir "Ingrese la palabra magica"
		leer entrada
		
		
		
	FinMientras
	
	si entrada=codigo
		escribir "Felicitaciones, acertaste la palabra!"
	SiNo
		Escribir  "Segui participando"
	FinSi

	
	
